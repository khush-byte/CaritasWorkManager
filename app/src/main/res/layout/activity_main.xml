<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/oneTime_btn"
        android:layout_width="200dp"
        android:layout_height="62dp"
        android:backgroundTint="#00BCD4"
        android:text="One time task"
        app:layout_constraintBottom_toTopOf="@+id/periodic_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/periodic_btn"
        android:layout_width="200dp"
        android:layout_height="62dp"
        android:backgroundTint="#00BCD4"
        android:text="Periodic task"
        app:layout_constraintBottom_toTopOf="@+id/cancel_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oneTime_btn" />

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="200dp"
        android:layout_height="62dp"
        android:backgroundTint="#00BCD4"
        android:text="Cancel task"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/periodic_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>